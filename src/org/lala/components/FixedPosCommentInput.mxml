                <s:NumericStepper id="rzNs" skinClass="org.lala.components.skins.SparkNumericStepper" borderColor="0xDDDDDD" minimum="0" maximum="360" stepSize="1" snapInterval="1" value="0" height="18" width="50" fontFamily="Arial" fontSize="12"/>
                <s:Label text="y"  width="10"/>
                <s:NumericStepper id="ryNs" skinClass="org.lala.components.skins.SparkNumericStepper" borderColor="0xDDDDDD" minimum="0" maximum="360" stepSize="1" snapInterval="1" value="0" height="18" width="50" fontFamily="Arial" fontSize="12"/>
            </s:HGroup>
        </mx:FormItem>
        <mx:FormItem label="目标点" styleName="FormItem" paddingTop="2" width="100%" height="24" enabled.constrain="false">
            <s:HGroup verticalAlign="middle">
                <s:Label text="x"  width="10"/>
                <s:NumericStepper id="xposto" skinClass="org.lala.components.skins.SparkNumericStepper" borderColor="0xDDDDDD" minimum="0" maximum="540" stepSize="1" snapInterval="1" value="0" height="18" width="50" fontFamily="Arial" fontSize="12"/>
                <s:Label text="y"  width="10"/>
                <s:NumericStepper id="yposto" skinClass="org.lala.components.skins.SparkNumericStepper" borderColor="0xDDDDDD" minimum="0" maximum="383" stepSize="1" snapInterval="1" value="0" height="18" width="50" fontFamily="Arial" fontSize="12"/>
                <s:ToggleButton id="postoBt" height="100%" label="拾取"
								change="posBt.selected=false;!postoBt.selected?toNormal():toCover();"
								width="45" skinClass="org.lala.components.skins.SparkToggleButtonSkin"/>
            </s:HGroup>
        </mx:FormItem>
        <mx:FormItem label="移动耗时" styleName="FormItem" paddingTop="2" width="100%" height="24" enabled.constrain="false">
            <s:HGroup verticalAlign="middle">
                <s:Label text=""  width="10"/>
                <s:NumericStepper id="mDurationNs" skinClass="org.lala.components.skins.SparkNumericStepper" borderColor="0xDDDDDD" minimum="0" maximum="10000" stepSize="100" snapInterval="100" value="500" height="18" width="50" fontFamily="Arial" fontSize="12"/>
            </s:HGroup>
        </mx:FormItem>
        <mx:FormItem label="开始暂停" styleName="FormItem" paddingTop="2" width="100%" height="24" enabled.constrain="false">
            <s:HGroup verticalAlign="middle">
                <s:Label text=""  width="10"/>
                <s:NumericStepper id="delayNs" minimum="0" maximum="10000" stepSize="100" snapInterval="100" value="0" height="18" width="50" fontFamily="Arial" fontSize="12" skinClass="org.lala.components.skins.SparkNumericStepper" borderColor="0xDDDDDD" />
            </s:HGroup>
        </mx:FormItem>
        <mx:FormItem label="" styleName="FormItem" paddingTop="2" width="100%">
            <s:HGroup verticalAlign="middle">
                <s:Label text=""  width="10"/>
                <s:Button id="previewBt" label="查看效果" click="previewBt_clickHandler(event)" skinClass="org.lala.components.skins.SparkButtonSkin"/>
                <s:Button id="sendBt" label="发送" click="sendBt_clickHandler(event)" skinClass="org.lala.components.skins.SparkButtonSkin"/>
            </s:HGroup>
        </mx:FormItem>
    </mx:Form>

<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
                   xmlns:s="library://ns.adobe.com/flex/spark" 
                   xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%" borderWeight="0" borderVisible="false" resize="group1_resizeHandler(event)" currentState="E" height.E="500">
    <fx:Style>
